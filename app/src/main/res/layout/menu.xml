<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#808080">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp"
        android:orientation="vertical"
        android:background="#808080">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="1dp"
            android:background="#808080">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/app_name"
                android:textColor="@color/black"
                android:textSize="30sp"
                android:textAlignment="center"
                android:textStyle="bold"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/menu"
                android:textColor="@color/black"
                android:textSize="30sp"
                android:textAlignment="center"
                android:textStyle="bold"
                android:background="@color/white"/>




        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp">

            <ImageView
                android:layout_width="175dp"
                android:layout_height="175dp"
                android:contentDescription="@string/categorias"
                android:src="@drawable/categorias"
                android:scaleX="0.5"
                android:scaleY="0.5"
                android:clickable="true"
                android:focusable="true"/>


            <ImageView
                android:layout_width="175dp"
                android:layout_height="175dp"
                android:contentDescription="@string/mural"
                android:src="@drawable/mural"
                android:scaleX="0.5"
                android:scaleY="0.5"
                android:clickable="true"
                android:focusable="true"
                />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp">

            <ImageView
                android:layout_width="175dp"
                android:layout_height="175dp"
                android:contentDescription="@string/perfil"
                android:src="@drawable/perfil"
                android:scaleX="0.5"
                android:scaleY="0.5"
                android:clickable="true"
                android:focusable="true"
                />

            <ImageView
                android:layout_width="175dp"
                android:layout_height="175dp"
                android:contentDescription="@string/sair"
                android:src="@drawable/logout"
                android:scaleX="0.5"
                android:scaleY="0.5"
                android:clickable="true"
                android:focusable="true"
                />

        </LinearLayout>




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/ftec"
                android:textAlignment="center"
                android:textSize="40sp"
                android:textColor="@color/black"
                android:textStyle="italic"
                />



        </LinearLayout>




    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>