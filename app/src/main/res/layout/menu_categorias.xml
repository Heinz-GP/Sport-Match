<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/btn_skate"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MenuCategorias">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#808080"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="1dp"
            android:background="#808080"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/usuario"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="30sp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@color/white">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/categorias"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="30sp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp">


            <ImageButton
                android:id="@+id/btn_futebol"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_marginStart="20dp"
                android:backgroundTint="@color/gray"
                android:scaleType="centerCrop"
                android:src="@drawable/futebol" />

            <ImageButton
                android:id="@+id/btn_volei"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_marginStart="20dp"
                android:backgroundTint="@color/gray"
                android:scaleType="centerCrop"
                android:src="@drawable/volei" />

            <ImageButton
                android:id="@+id/btn_basquete"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_marginStart="20dp"
                android:backgroundTint="@color/gray"
                android:scaleType="centerCrop"
                android:src="@drawable/basquete" />

            <ImageButton
                android:id="@+id/btn_tenis"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_marginStart="20dp"
                android:backgroundTint="@color/gray"
                android:scaleType="centerCrop"
                android:src="@drawable/tenis" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:background="#808080">

            <ImageButton
                android:id="@+id/btn_trilha"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_marginStart="20dp"
                android:backgroundTint="@color/gray"
                android:scaleType="centerCrop"
                android:src="@drawable/trilha" />

            <ImageButton
                android:id="@+id/btn_rugby"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_marginStart="20dp"
                android:backgroundTint="@color/gray"
                android:scaleType="centerCrop"
                android:src="@drawable/rugby" />

            <ImageButton
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_marginStart="20dp"
                android:backgroundTint="@color/gray"
                android:scaleType="centerCrop"
                android:src="@drawable/skate" />

            <ImageButton
                android:id="@+id/btn_corrida"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_marginStart="20dp"
                android:backgroundTint="@color/gray"
                android:scaleType="centerCrop"
                android:src="@drawable/corrida" />

        </LinearLayout>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>